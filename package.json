{
  "name": "openclaw-cost-governor",
  "version": "1.0.0",
  "description": "Budget alerts, circuit breakers, and cost optimization for OpenClaw. Stop burning money on AI tokens.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "setup": "node src/setup.js",
    "dashboard": "node src/dashboard.js",
    "test": "node --test tests/*.test.js"
  },
  "keywords": [
    "openclaw",
    "cost-tracking",
    "budget",
    "ai-agents",
    "token-tracking",
    "circuit-breaker"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {},
  "openclaw": {
    "skill": true,
    "hooks": {
      "provider:before": "hooks/provider-before.js",
      "provider:after": "hooks/provider-after.js",
      "session:end": "hooks/session-end.js"
    },
    "commands": {
      "status": {
        "description": "Show current usage and budget status",
        "handler": "src/cli.js#status"
      },
      "dashboard": {
        "description": "Open web dashboard",
        "handler": "src/cli.js#dashboard"
      },
      "reset": {
        "description": "Reset circuit breaker",
        "handler": "src/cli.js#reset"
      },
      "report": {
        "description": "Generate cost report",
        "handler": "src/cli.js#report"
      }
    }
  }
}
